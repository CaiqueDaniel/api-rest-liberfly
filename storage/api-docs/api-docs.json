                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2022-11-14T00:06:03.000000Z"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2022-11-14T00:06:03.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
